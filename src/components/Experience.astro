---
interface Props {
  title: string;
  dateRange: string;
  description: string;
  skills: string[];
}

const { title, dateRange, description, skills } = Astro.props;
---

<div class="flex flex-col md:flex-row">
  <div class="hidden md:flex items-center">
    <div class="text-sm min-w-[240px] font-normal">
      {dateRange}
    </div>
  </div>
  <div class="bg-primary-piper relative z-10">
    <div class="p-4 relative z-10">
      <div class="flex md:hidden items-center mb-2">
        <div class="text-sm min-w-[220px] font-normal">
          {dateRange}
        </div>
      </div>
      <div class="flex items-center justify-between w-full relative experience">
        <div class="text-xl font-extrabold text-white font-serif leading-7">
          {title}
        </div>
      </div>

      <div class="mt-3 text-primary-subtitle">
        {description}
      </div>
      <div class="mt-5 flex flex-wrap gap-2">
        {
          skills.map((skill) => (
            <span class="text-sm font-bold px-3 py-2 bg-primary-accent text-black rounded-r-full rounded-l-full">
              {skill}
            </span>
          ))
        }
      </div>
    </div>
    <div class="w-4 h-4 absolute top-0 bottom-0 -left-2 m-auto bg-primary-piper rotate-45 z-0"></div>
  </div>
</div>
