---
interface Props {
  paths: string[];
}

const { paths } = Astro.props;
---

<ol class="flex flex-wrap items-center whitespace-nowrap">
  <li class="inline-flex items-center">
    <a
      class="flex items-center text-sm text-gray-500 dark:text-neutral-500 hover:text-primary-dark hover:dark:text-primary-dark underline"
      href="/"
    >
      Home
    </a>
    <svg
      class="shrink-0 mx-2 size-4 text-gray-400 dark:text-neutral-600"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="m9 18 6-6-6-6"></path>
    </svg>
  </li>
  {
    paths.map((p, idx) => (
      <li
        class="inline-flex items-center text-sm font-semibold text-gray-800 truncate dark:text-neutral-200"
        aria-current="page"
      >
        {p}
        {idx + 1 !== paths.length && (
          <svg
            class="shrink-0 mx-2 size-4 text-gray-400 dark:text-neutral-600"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="m9 18 6-6-6-6" />
          </svg>
        )}
      </li>
    ))
  }
</ol>
