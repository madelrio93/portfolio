---
import "@fontsource/ibm-plex-mono";
import "@fontsource-variable/raleway";
import "@assets/styles/global.css";
import Header from "@components/ui/Header.astro";
import Footer from "@components/ui/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import SocialProfile from "@components/ui/SocialProfile.astro";


interface Props {
  title: string;
  description: string;
  socialProfile: {
    githubUrl: string;
    linkedinUrl: string;
    emailUrl: string;
  };
}

const { title, description, socialProfile} = Astro.props;
---

<!doctype html>
<html lang={Astro.currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="w-full h-full relative font-sans bg-background-light dark:bg-background-dark text-color-light dark:text-color-dark"
  >
    <Header />

    <main class="mt-5">
      <slot />
    </main>

    <Footer>
      <SocialProfile
        githubUrl={socialProfile.githubUrl}
        linkedinUrl={socialProfile.linkedinUrl}
        emailUrl={socialProfile.emailUrl}
      />
    </Footer>
  </body>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
  }
  body {
    @apply transition duration-200;
    overflow-x: hidden;
  }
</style>
